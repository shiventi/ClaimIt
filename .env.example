# ClaimIt Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ============================================
# WATSON AI CONFIGURATION
# ============================================
# IBM Watson API Key (from IBM Cloud)
WATSON_API_KEY=your_watson_api_key_here

# Watson URL endpoint
WATSON_URL=https://us-south.ml.cloud.ibm.com/ml/v1/text/chat?version=2023-05-29

# IBM Cloud Access Token (generated from API key)
ACCESS_TOKEN=your_ibm_access_token_here

# Watson Assistant ID
WATSON_ASSISTANT_ID=your_assistant_id_here

# Watson Environment ID
WATSON_ENVIRONMENT_ID=your_environment_id_here

# ============================================
# SUPABASE DATABASE CONFIGURATION
# ============================================
# Supabase Project URL (from your Supabase project settings)
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anon/Public Key (from your Supabase API settings)
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# SUPABASE DIRECT DATABASE CONNECTION (Optional)
# ============================================
# Only needed if using direct PostgreSQL connection instead of REST API
# NOTE: Supabase free tier requires IPv6. For IPv4, upgrade to Pro tier.

# SUPABASE_DB_HOST=db.your-project-ref.supabase.co
# SUPABASE_DB_NAME=postgres
# SUPABASE_DB_USER=postgres
# SUPABASE_DB_PASSWORD=your_database_password_here
# SUPABASE_DB_PORT=5432

# ============================================
# DJANGO CONFIGURATION
# ============================================
# Django Secret Key (generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
SECRET_KEY=django-insecure-generate-your-own-secret-key-here

# Debug mode (MUST be False in production!)
DEBUG=True

# Allowed hosts (comma-separated, e.g., yourdomain.com,www.yourdomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# API Base URL for frontend (without /api suffix)
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
REACT_APP_API_BASE_URL=http://localhost:8000
